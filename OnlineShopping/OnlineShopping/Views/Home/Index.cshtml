@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Model.ViewModel.HomeProductsModel

<div class="header_slide">
    <div class="header_bottom_left">
        <div class="categories">
            <ul>
                <h3>Categories</h3>
                @foreach (var item in Model.Catalogues)
                {
                    <li>
                        @Html.ActionLink(@item.Catalogue_Name, "Catalogue", "Home", new { IDStr = @item.Catalogue_ID + "" }, null)
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="header_bottom_right">
        <div class="slider">
            <div id="slider">
                <div id="mover">
                    <div id="slide-1" class="slide">
                        <div class="slider-img">
                            <a href="preview.html"><img src="~/Content/MyTemplate/images/slide-1-image.png" alt="learn more" /></a>
                        </div>
                        <div class="slider-text">
                            <h1>Clearance<br><span>SALE</span></h1>
                            <h2>UPTo 20% OFF</h2>
                            <div class="features_list">
                                <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-text">
                            <h1>Clearance<br><span>SALE</span></h1>
                            <h2>UPTo 40% OFF</h2>
                            <div class="features_list">
                                <h4>Get to Know More About Our Memorable Services</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="slider-img">
                            <a href="preview.html"><img src="~/Content/MyTemplate/images/slide-3-image.jpg" alt="learn more" /></a>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="slide">
                        <div class="slider-img">
                            <a href="preview.html"><img src="~/Content/MyTemplate/images/slide-2-image.jpg" alt="learn more" /></a>
                        </div>
                        <div class="slider-text">
                            <h1>Clearance<br><span>SALE</span></h1>
                            <h2>UPTo 10% OFF</h2>
                            <div class="features_list">
                                <h4>Get to Know More About Our Memorable Services Lorem Ipsum is simply dummy text</h4>
                            </div>
                            <a href="preview.html" class="button">Shop Now</a>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
</div>
</div>

<div class="main">
    <div class="content">

        <div class="content_bottom">
            <div class="heading">
                <h3>@Html.ActionLink("Trending Products", "Trending", "Home")</h3>
            </div>
            <div class="see">
                <p>@Html.ActionLink("See all Products", "Trending", "Home")</p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in Model.TrendingProducts)
            {
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@Url.Action("ProductDetails", "Product" , new { productIDStr=@item.Product_ID + "" })">
                        <img src="@Url.Content(@item.Title_Image)" alt="" />
                    </a>
                    <h2>@item.Product_Name</h2> <img src="" />
                    <div class="price-details">
                        <div class="price-number">
                            <p>
                                <span class="rupees">
                                    @item.RealPrice$
                                </span>
                                @if (item.DiscountPercent > 0)
                                {
                                    <span class="rupees">
                                        <strike style="color: #6A82A4; padding-left: 5px">
                                            @item.Price$
                                        </strike>
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="add-cart">
                            <h4>@Html.ActionLink("Add to Cart", "ProductDetails", "Product", new { productIDStr = @item.Product_ID + "" }, null)</h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                    @if (item.Products_Available <= 0)
                    {
                        <div class="sold-out">
                            <a href="@Url.Action("ProductDetails", "Product" , new { productIDStr=@item.Product_ID + "" })">

                                <img src="~/Image/soldout.png" />
                            </a>
                        </div>
                    }
                    @if (item.DiscountPercent > 0)
                    {
                        <div class="discount-banner">
                            <p>
                                -@item.DiscountPercent%
                            </p>
                        </div>
                    }
                </div>
            }
        </div>

        <div class="content_top">
            <div class="heading">
                <h3>@Html.ActionLink("New Products", "NewProduct", "Home")</h3>
            </div>
            <div class="see">
